<!doctype html>
<html lang="en" data-sb-object-id="content/pages/index.json">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title data-sb-field-path="title">{{ (pages.index.title) or 'Home' }}</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <h1 data-sb-field-path="heroHeading">{{ (pages.index.heroHeading) or 'Welcome' }}</h1>
      <p data-sb-field-path="heroSubheading">{{ (pages.index.heroSubheading) or '' }}</p>
      <nav>
        <a href="/index.html">Home</a>
        <a href="/properties.html">Properties</a>
        <a href="/contact.html">Contact</a>
      </nav>
    </header>

    <main>
      {% if pages.index.sections %}
        {% for s in pages.index.sections %}
          <section data-sb-field-path="sections[{{ loop.index0 }}]">
            <h2 data-sb-field-path="sections[{{ loop.index0 }}].heading">{{ s.heading }}</h2>
            <p data-sb-field-path="sections[{{ loop.index0 }}].text">{{ s.text }}</p>
          </section>
        {% endfor %}
      {% endif %}

      <section>
        <h2>Sample Property</h2>
        <ul>
          {% for p in collections.property %}
            <li data-sb-object-id="{{ p.inputPath }}">
              <a href="/properties/{{ p.fileSlug }}.html" data-sb-field-path="title">{{ p.data.title }}</a>
              <span data-sb-field-path="price">{{ p.data.price }}</span>
            </li>
          {% endfor %}
        </ul>
      </section>
    </main>

    <footer>
      <small>&copy; Vandore</small>
    </footer>
  </body>
  </html>
