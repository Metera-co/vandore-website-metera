<!DOCTYPE html>
<html lang="lv" data-sb-object-id="{{ objectPath }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;600&family=Noto+Serif:wght@700&display=swap&subset=latin-ext" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/changes.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/fonts.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/shishirraven/animate-on-scroll@v1.2/animation_utility.css">
  <link rel="icon" type="image/x-icon" href="/{{ global.favicon }}">
  <title data-sb-field-path="title">{{ pageTitle }}</title>
</head>
<body>
  <!-- Header -->
  <header class="bg-accent-primary px-5">
    <nav class="navbar">
      <div class="container-fluid ps-3 gap-3">
        <div class="me-auto"></div>
        <div class="logo-container position-absolute start-50 translate-middle-x">
          <a class="navbar-brand" href="/index.html"><img src="/{{ global.logo }}" alt="{{ global.siteTitle }}" class="img-fluid"></a>
        </div>
        <div class="w-max-content">
          <button class="btn btn-toggler-accent" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDark" aria-controls="offcanvasDark"><i class="fa-solid fa-bars"></i>
            Menu</button>
          <div class="offcanvas offcanvas-end offcanvas-fullwidth text-bg-dark" tabindex="-1" id="offcanvasDark" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header bg-transparent">
              <h5 id="offcanvasRightLabel">Menu</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <div class="r-container">
                <div class="row row-cols-xl-2 row-cols-1">
                  <div class="col col-xl-10 mb-3">
                    <div class="d-flex flex-column">
                      <!-- Keep original offcanvas navigation visuals intact -->
                      {% for link in global.navLinks %}
                      <div class="navigation" data-sb-field-path="global.navLinks.{{ loop.index0 }}">
                        <span class="header-text">{{ link.label }}</span>
                        <img src="/image/img6.png" class="img-fluid rounded-3" style="aspect-ratio: 9/5;" height="175" width="311" alt="{{ global.siteTitle }}">
                        <a href="/{{ link.href }}" class="d-flex" style="justify-self: end;">
                          <i class="rtmicon rtmicon-arrow-right fs-1 fw-bold"></i>
                        </a>
                      </div>
                      <hr>
                      {% endfor %}
                    </div>
                  </div>
                  <div class="col col-xl-2 mb-3">
                    <div class="d-flex flex-column gap-3 align-items-xl-end align-items-start">
                      <div class="d-flex flex-column gap-3">
                        <a href="tel:{{ global.contact.phone | replace(' ', '') }}" class="fs-5 link" data-sb-field-path="global.contact.phone">{{ global.contact.phone }}</a>
                        <a href="mailto:{{ global.contact.email }}" class="fs-5 link" data-sb-field-path="global.contact.email">{{ global.contact.email }}</a>
                      </div>
                      <div class="social-container">
                        <a href="{{ global.social.facebook }}" class="social-item" target="_blank" data-sb-field-path="global.social.facebook">
                          <i class="fa-brands fa-xs fa-facebook-f"></i>
                        </a>
                        <a href="{{ global.social.instagram }}" class="social-item" target="_blank" data-sb-field-path="global.social.instagram">
                          <i class="fa-brands fa-xs fa-instagram"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>

  {{ content | safe }}

  <!-- Footer -->
  <footer>
    <div class="section position-relative bg-black-1" style="height: 90vh;">
      <div class="row row-cols-xl-2 row-cols-1 h-100">
        <div class="col col-xl-8 mb-3">
          <div class="d-flex flex-column gap-3 justify-content-between h-100">
            <div class="d-flex flex-column accent-primary">
              <p class="gray">SazinƒÅties</p>
              <h1 class="fw-normal" data-sb-field-path="global.contact.email">{{ global.contact.email }}</h1>
            </div>
            <img src="/image/logo-footer.png?v=2025" alt="{{ global.siteTitle }}" class="img-fluid" width="938">
          </div>
        </div>
        <div class="col col-xl-4 mb-3">
          <div class="d-flex flex-column gap-5 justify-content-between accent-primary h-100">
            <div class="d-flex flex-row gap-5">
              <ul class="list-unstyled d-flex flex-column gap-3 accent-color" data-sb-field-path="global.navLinks">
                {% for link in global.navLinks %}
                <li>
                  <a href="/{{ link.href }}" class="link d-flex flex-row gap-3 align-items-center">{{ link.label }}</a>
                </li>
                {% endfor %}
              </ul>
              <div class="d-flex flex-column gap-3">
                <a href="{{ global.contact.mapUrl }}" class="link" target="_blank" data-sb-field-path="global.contact.address">{{ global.contact.address }}</a>
                <a href="tel:{{ global.contact.phone | replace(' ', '') }}" class="link" data-sb-field-path="global.contact.phone">{{ global.contact.phone }}</a>
              </div>
            </div>
            <div class="d-flex flex-row gap-3" data-sb-field-path="global.legalLinks">
              {% for l in global.legalLinks %}
              <div class="border-end pe-3 border-gray">
                <a href="{{ l.href }}" class="link d-flex flex-row gap-3 align-items-center">{{ l.label }}</a>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Back to top button -->
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="rtmicon rtmicon-arrow-up"></i></a>

  <!-- Scripts -->
  <script src="/js/vendor/jquery.min.js"></script>
  <script src="/js/vendor/bootstrap.bundle.min.js"></script>
  <script src="/js/vendor/swiper-bundle.min.js"></script>
  <script src="/js/script.js"></script>
  <script src="/js/swiper-script.js"></script>
  <script src="/js/submit-form.js"></script>
  <script src="/js/vendor/isotope.pkgd.min.js"></script>
  <script src="/js/video_embedded.js"></script>
  <script src="/js/custom.js"></script>
  <script src="https://cdn.jsdelivr.net/gh/shishirraven/animate-on-scroll@v1.0/oyethemes_onscroll_animation.js"></script>
</body>
</html>
