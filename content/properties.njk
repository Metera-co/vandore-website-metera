---
pagination:
  data: collections.property
  size: 1
  alias: current
permalink: "/properties/{{ current.fileSlug }}.html"
---
<!doctype html>
<html lang="lv">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ current.data.title or 'Īpašums' }}</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <nav>
        <a href="/index.html">Sākums</a>
        <a href="/properties.html">Īpašumi</a>
      </nav>
    </header>

    <main>
      <article data-sb-object-id="{{ current.inputPath }}">
        <h1 data-sb-field-path="title">{{ current.data.title or 'Īpašums' }}</h1>
        <p><strong>Cena:</strong> <span data-sb-field-path="price">{{ current.data.price or '' }}</span></p>
        <p><strong>Adrese:</strong> <span data-sb-field-path="address">{{ current.data.address or '' }}</span></p>
        <p data-sb-field-path="description">{{ current.data.description or '' }}</p>
        {% if current.data.image %}
          <img alt="Īpašuma attēls" src="{{ current.data.image }}" style="max-width: 600px; width: 100%; height: auto;" data-sb-field-path="image#@src"/>
        {% endif %}
      </article>
    </main>
  </body>
  </html>

