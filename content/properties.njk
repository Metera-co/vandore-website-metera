---
layout: base.njk
data: properties
permalink: "properties.html"
eleventyComputed:
  pageTitle: "{{ pages[data].title }}"
  objectPath: "content/pages/{{ data }}.json"
---

<!-- Hero Section -->
<div class="section">
  <div class="r-container">
    <div class="row row-cols-xl-2 row-cols-1">
      <div class="col col-xl-10 mb-3">
        <div>
          <h1 class="display" style="max-width: 700px;" data-sb-field-path="heroHeading">{{ pages[data].heroHeading }}</h1>
          <div class="row row-xl-cols-2 row-cols-1">
            <div class="col col-xl-2">
              <div class="d-flex flex-column gap-2 align-items-xl-center align-items-start">
                <p data-sb-field-path="heroSubheading">{{ pages[data].heroSubheading }}</p>
              </div>
              <div class="devider"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col col-xl-2 mb-3"></div>
    </div>
  </div>
</div>

<!-- Filters and Grid -->
<div class="section">
  <div class="r-container d-flex flex-column gap-5">
    <!-- Desktop filter bar -->
    <div class="filter-bar d-none d-lg-block bg-white p-3 rounded-3">
      <div class="row g-3">
        <div class="col-lg-3 col-md-6">
          <div class="form-group">
            <label for="location-search">Atrašanās vieta</label>
            <input type="text" id="location-search" class="form-control" placeholder="Pilsēta/Rajons/Apkaime">
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <label>Cenu diapazons</label>
          <div class="input-group">
            <input type="number" id="min-price" class="form-control" placeholder="Min €" min="0">
            <input type="number" id="max-price" class="form-control" placeholder="Max €" min="0">
          </div>
        </div>
        <div class="col-lg-4 col-md-12">
          <label>Guļamistabas</label>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-primary active">Viss</button>
            <button type="button" class="btn btn-outline-primary">1</button>
            <button type="button" class="btn btn-outline-primary">2</button>
            <button type="button" class="btn btn-outline-primary">3</button>
            <button type="button" class="btn btn-outline-primary">4</button>
            <button type="button" class="btn btn-outline-primary">5+</button>
          </div>
        </div>
        <div class="col-lg-2 col-md-12">
          <div class="d-grid gap-2">
            <button class="btn btn-primary" id="apply-filters">Piemērot</button>
            <button class="btn btn-secondary" id="clear-filters">Noskaidrot</button>
          </div>
        </div>
      </div>
    </div>

    <div class="active-filters my-3">
      <span id="filter-chips"></span>
      <span id="property-count" class="ms-2"></span>
    </div>

    <div id="property-grid" class="row row-cols-xl-3 row-cols-lg-2 row-cols-1" data-sb-field-path="properties">
      {% for property in collections.property %}
      <div class="col mb-4"
           data-sb-object-id="content/properties/{{ property.fileSlug }}.json"
           data-location="{{ (property.data.address or '') | lower }}"
           data-price="{{ (property.data.price or '') | replace('$','') | replace(',','') }}"
           data-bedrooms="{{ property.data.bedrooms }}">
        <div class="card h-100">
          <img src="/{{ property.data.image }}" class="card-img-top" alt="{{ property.data.title }}" style="aspect-ratio: 3/2; object-fit: cover;" data-sb-field-path="image">
          <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="card-title mb-0" data-sb-field-path="title">{{ property.data.title }}</h5>
              <h6 class="text-accent fw-bold" data-sb-field-path="price">${{ (property.data.price or '') | replace(',','') }}</h6>
            </div>
            <div class="d-flex align-items-center mb-2">
              <i class="rtmicon rtmicon-location me-2"></i>
              <span class="text-muted" data-sb-field-path="address">{{ property.data.address }}</span>
            </div>
            <p class="card-text flex-grow-1" data-sb-field-path="description">{{ property.data.description }}</p>
            <div class="d-flex justify-content-between align-items-center mt-auto">
              <div class="d-flex gap-3">
                <span class="badge bg-light text-dark" data-sb-field-path="bedrooms">{{ property.data.bedrooms }} bed</span>
                <span class="badge bg-light text-dark" data-sb-field-path="bathrooms">{{ property.data.bathrooms }} bath</span>
              </div>
              <a href="/properties/{{ property.fileSlug }}/" class="btn btn-accent btn-sm">
                <span>View Details</span>
                <i class="rtmicon rtmicon-arrow-up-right ms-1"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    <div id="empty-state" class="text-center py-5" style="display: none;">
      <h3>Nekādas īpašības nav atrasti</h3>
      <p>Mēģiniet pielāgot filtrus vai</p>
      <a href="#" id="clear-filters-link" class="link">Notīriet visus filtrus</a>
    </div>
  </div>
</div>
