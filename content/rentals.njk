---
pagination:
  data: collections.rental
  size: 1
  alias: current
permalink: "/rentals/{{ current.fileSlug }}.html"
---
<!doctype html>
<html lang="lv">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ current.data.title or 'Īres sludinājums' }}</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <nav>
        <a href="/index.html">Sākums</a>
        <a href="/rentals.html">Īstermiņa īres</a>
      </nav>
    </header>

    <main>
      <article data-sb-object-id="{{ current.inputPath }}">
        <h1 data-sb-field-path="title">{{ current.data.title or 'Īres sludinājums' }}</h1>
        <p><strong>Cena:</strong> <span data-sb-field-path="price">{{ current.data.price or '' }}</span></p>
        <p><strong>Adrese:</strong> <span data-sb-field-path="address">{{ current.data.address or '' }}</span></p>
        <p data-sb-field-path="description">{{ current.data.description or '' }}</p>
        {% set image1 = current.data.image_1 or current.data.image %}
        {% set image2 = current.data.image_2 %}
        {% if image1 or image2 %}
          <div class="rental-images" style="display: flex; flex-wrap: wrap; gap: 1rem; align-items: flex-start;">
            {% if image1 %}
              <img alt="{{ current.data.image_1_alt or current.data.title or 'Īres attēls 1' }}" src="{{ image1 }}" style="max-width: 600px; width: 100%; height: auto;" data-sb-field-path="image_1#@src image_1_alt#@alt"/>
            {% endif %}
            {% if image2 %}
              <img alt="{{ current.data.image_2_alt or current.data.title or 'Īres attēls 2' }}" src="{{ image2 }}" style="max-width: 600px; width: 100%; height: auto;" data-sb-field-path="image_2#@src image_2_alt#@alt"/>
            {% endif %}
          </div>
        {% endif %}
      </article>
    </main>
  </body>
  </html>
