---
permalink: rentals.html
layout: null
---
{% extends 'layouts/base.njk' %}
{% set pageSlug = 'rentals' %}
{% set pageData = pages[pageSlug] or {} %}
{% set site = settings.default or {} %}
{% set hero = pageData.hero or {
  eyebrow: pageData.heroEyebrow,
  heading: pageData.heroHeading,
  subheading: pageData.heroSubheading
} %}
{% set rentalConfig = site.search and site.search.rentals or {} %}
{% set filters = rentalConfig.filters or {} %}
{% set sortConfig = rentalConfig.sort or {} %}
{% block content %}
<section class="vh-section" data-rental-list>
  <div class="vh-container vh-stack vh-stack--xl">
    <header class="vh-list-header">
      <div class="vh-list-header__meta">
        <p id="rentals-count" aria-live="polite"></p>
      </div>
      {% if sortConfig.options %}
      <div class="vh-form__field vh-list-header__control">
        <label for="rental-sort">Kartot pec</label>
        <select id="rental-sort" name="sort" form="rental-filter-form">
          <option value="">Bez kartosanas</option>
          {% for option in sortConfig.options %}
          <option value="{{ option.value }}"{% if option.value == (sortConfig.default or '') %} selected{% endif %}>{{ option.label }}</option>
          {% endfor %}
        </select>
      </div>
      {% endif %}
    </header>

    <form id="rental-filter-form" class="vh-filter" data-filter-form>
      <div class="vh-filter__grid">
        <div class="vh-form__field">
          <label for="rental-location">Atrasanas vieta</label>
          <select id="rental-location" name="location">
            <option value="">Visas atrasanas vietas</option>
            {% for location in filters.locations or [] %}
            <option value="{{ location }}">{{ location }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="vh-form__field">
          <label for="rental-price">Cena nakti</label>
          <select id="rental-price" name="priceRange">
            <option value="">Visas cenas</option>
            {% for range in filters.priceRanges or [] %}
            <option value="{{ loop.index0 }}">{{ range.label }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="vh-form__field">
          <label for="rental-bedrooms">Gulamistabas</label>
          <select id="rental-bedrooms" name="bedrooms">
            <option value="">Visas gulamistabas</option>
            {% for step in filters.bedroomSteps or [] %}
              {% if loop.last %}
                <option value="{{ step }}+">{{ step }}+</option>
              {% else %}
                <option value="{{ step }}">{{ step }}</option>
              {% endif %}
            {% endfor %}
          </select>
        </div>
        <div class="vh-form__field">
          <label for="rental-type">Ires tips</label>
          <select id="rental-type" name="type">
            <option value="">Visi tipi</option>
            {% for type in filters.types or [] %}
            <option value="{{ type.value }}">{{ type.label }}</option>
            {% endfor %}
          </select>
        </div>
        {% if filters.occupancySteps %}
        <div class="vh-form__field">
          <label for="rental-occupancy">Maks. viesi</label>
          <select id="rental-occupancy" name="occupancy">
            <option value="">Jebkads viesu skaits</option>
            {% for step in filters.occupancySteps %}
              {% if loop.last %}
                <option value="{{ step }}+">{{ step }}+</option>
              {% else %}
                <option value="{{ step }}">{{ step }}</option>
              {% endif %}
            {% endfor %}
          </select>
        </div>
        {% endif %}
      </div>
      <div class="vh-filter__actions">
        <button type="submit" class="vh-button vh-button--primary">Piemerot</button>
        <button type="reset" class="vh-button vh-button--ghost">Notirit</button>
      </div>
    </form>

    <div id="rental-filter-chips" class="vh-chip-group" hidden aria-live="polite"></div>

    <div class="vh-grid vh-grid--responsive" id="rentals-grid" aria-live="polite"></div>

    <div class="vh-empty" id="rentals-empty" hidden>
      <p>Nav atrasti ires piedavajumi, kas atbilst jusu kriterijiem.</p>
      <button type="button" class="vh-button vh-button--subtle" id="rentals-empty-reset">Notirit filtrus</button>
    </div>
  </div>
</section>
{% endblock %}

{% block scripts %}
  <script type="application/json" id="rental-filter-config">{{ rentalConfig | json | safe }}</script>
  <script src="/js/rentals.js" defer></script>
{% endblock %}
