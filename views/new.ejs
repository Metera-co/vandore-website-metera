<%- include('partials/header', { title: 'Pievienot — ' + current.title }) %>

<section>
  <h2 style="margin-top:0">Pievienot sludinājumu — <%= current.title %></h2>
  <% if (errors && errors.length) { %>
    <div class="errors">
      <strong>Labojiet kļūdas:</strong>
      <ul>
        <% errors.forEach(e => { %>
          <li><%= e.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="" method="post" enctype="multipart/form-data">
    <div class="row">
      <div>
        <label for="title">Nosaukums*</label>
        <input id="title" name="title" required value="<%= (old && old.title) || '' %>">
      </div>
      <div>
        <label for="price">Cena</label>
        <input id="price" name="price" placeholder="piem., 120000 €" value="<%= (old && old.price) || '' %>">
      </div>
    </div>

    <div class="row">
      <div>
        <label for="city">Pilsēta</label>
        <input id="city" name="city" value="<%= (old && old.city) || '' %>">
      </div>
      <div>
        <label for="address">Adrese</label>
        <input id="address" name="address" value="<%= (old && old.address) || '' %>">
      </div>
    </div>

    <div class="row-1">
      <label for="description">Apraksts</label>
      <textarea id="description" name="description"><%= (old && old.description) || '' %></textarea>
    </div>

    <h3>Kontakti</h3>
    <div class="row">
      <div>
        <label for="contact_name">Vārds</label>
        <input id="contact_name" name="contact_name" value="<%= (old && old.contact_name) || '' %>">
      </div>
      <div>
        <label for="contact_phone">Tālrunis</label>
        <input id="contact_phone" name="contact_phone" value="<%= (old && old.contact_phone) || '' %>">
      </div>
    </div>

    <div class="row">
      <div>
        <label for="contact_email">E-pasts</label>
        <input id="contact_email" name="contact_email" value="<%= (old && old.contact_email) || '' %>">
      </div>
      <div>
        <label for="images">Attēli (līdz 8)</label>
        <input id="images" type="file" name="images" multiple accept="image/*">
      </div>
    </div>

    <div style="margin-top:1rem">
      <button class="btn" type="submit">Publicēt</button>
      <a class="btn" href="/sekcija/<%= current.key %>" style="background:#6b7280">Atcelt</a>
    </div>
  </form>
</section>

<%- include('partials/footer') %>

