<%- include('partials/layout-head', { pageTitle: 'Sludinajumi', bodyClass: 'listing-page' }) %>
<%- include('partials/site-header', { activeCategory: null, newListingCategory: 'pardosana' }) %>

<main class="py-5">
  <section class="container py-4">
    <div class="row align-items-center gy-4">
      <div class="col-lg-7">
        <h1 class="display-5 fw-semibold mb-3">Parvaldiet Vandore Heritage sludinajumus</h1>
        <p class="lead text-muted mb-4">Vienkarši pievienojiet, redigejiet un parkartojiet attelus visiem ipašumiem. Visi dati tiek glabati droši un ir gatavi publicešanai Netlify.</p>
        <div class="d-flex flex-wrap gap-3">
          <% Object.values(CATEGORIES).forEach((cat) => { %>
            <a href="/sekcija/<%= cat.key %>" class="btn btn-toggler-accent text-uppercase fw-semibold px-4 py-3">
              Skatit: <%= cat.title %>
            </a>
          <% }); %>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="bg-white border border-gray-hover rounded-3 p-4 shadow-sm">
          <h2 class="h5 text-uppercase text-muted mb-4">Aktivie sludinajumi</h2>
          <ul class="list-unstyled mb-0">
            <% Object.values(CATEGORIES).forEach((cat) => { %>
              <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <span class="fw-semibold"><%= cat.title %></span>
                <span class="badge bg-accent text-white fs-6">
                  <%= counts[cat.key] || 0 %>
                </span>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="container pb-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
      <h2 class="h4 mb-0">Jaunakie sludinajumi</h2>
      <a href="/sekcija/pardosana/pievienot" class="btn btn-accent px-4 py-2 text-uppercase fw-semibold">+ Pievienot sludinajumu</a>
    </div>
    <% if (!listings.length) { %>
      <div class="alert alert-info mb-0">Vel nav izveidots neviens sludinajums. Saciet ar pirmo!</div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        <% listings.forEach((listing) => { const hero = (listing.images || [])[0]; %>
          <div class="col">
            <div class="card h-100 border-0 shadow-sm">
              <div class="ratio ratio-4x3 overflow-hidden rounded-top">
                <% if (hero) { %>
                  <img src="<%= hero.src %>" alt="<%= hero.alt || listing.title %>" class="w-100 h-100 object-fit-cover">
                <% } else { %>
                  <img src="/image/dummy-img-900x700.jpg" alt="Nav pievienotu attelu" class="w-100 h-100 object-fit-cover">
                <% } %>
              </div>
              <div class="card-body d-flex flex-column">
                <span class="text-uppercase text-muted small mb-2"><%= CATEGORIES[listing.category]?.title || 'Ipašums' %></span>
                <h3 class="h5 mb-1"><%= listing.title %></h3>
                <% if (listing.price) { %>
                  <p class="fw-semibold text-accent mb-2"><%= listing.price %></p>
                <% } %>
                <% if (listing.address || listing.city) { %>
                  <p class="text-muted small mb-3"><%= listing.address %><%= listing.address && listing.city ? ', ' : '' %><%= listing.city %></p>
                <% } %>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <a class="btn btn-outline-secondary btn-sm" href="/sludinajums/<%= listing.id %>">Skatit</a>
                  <span class="text-muted small">Atjaunots: <%= dayjs(listing.updated_at).format('DD.MM.YYYY HH:mm') %></span>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </section>
</main>

<%- include('partials/layout-foot') %>
