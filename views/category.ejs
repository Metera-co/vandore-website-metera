<%- include('partials/layout-head', { pageTitle: current.title, bodyClass: 'listing-category-page' }) %>
<%- include('partials/site-header', { activeCategory: current.key, newListingCategory: current.key }) %>

<main class="py-5">
  <section class="container pb-4">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
      <div>
        <span class="text-uppercase text-muted small">Sekcija</span>
        <h1 class="display-6 fw-semibold mb-2"><%= current.title %></h1>
        <p class="text-muted mb-0">Kopa sludinajumu: <strong><%= listings.length %></strong>. Parvaldiet galerijas ar vairakam fotografijam un organizejiet saturu pirms publicešanas.</p>
      </div>
      <div class="d-flex gap-3 flex-wrap">
        <a href="/sekcija/<%= current.key %>/pievienot" class="btn btn-accent px-4 py-2 text-uppercase fw-semibold">+ Pievienot sludinajumu</a>
      </div>
    </div>
  </section>

  <section class="container">
    <% if (!listings.length) { %>
      <div class="alert alert-info">Šaja sekcija vel nav pievienotu sludinajumu.</div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        <% listings.forEach((listing) => { const hero = (listing.images || [])[0]; %>
          <div class="col">
            <div class="card h-100 border-0 shadow-sm">
              <div class="ratio ratio-4x3 overflow-hidden rounded-top position-relative">
                <% if (hero) { %>
                  <img src="<%= hero.src %>" alt="<%= hero.alt || listing.title %>" class="w-100 h-100 object-fit-cover">
                <% } else { %>
                  <img src="/image/dummy-img-900x700.jpg" alt="Nav pievienotu attelu" class="w-100 h-100 object-fit-cover">
                <% } %>
                <span class="badge bg-dark position-absolute top-0 end-0 m-3">Atteli: <%= (listing.images || []).length %></span>
              </div>
              <div class="card-body d-flex flex-column">
                <h2 class="h5 mb-1"><%= listing.title %></h2>
                <% if (listing.price) { %>
                  <p class="text-accent fw-semibold mb-2"><%= listing.price %></p>
                <% } %>
                <% if (listing.address || listing.city) { %>
                  <p class="text-muted small mb-3"><%= listing.address %><%= listing.address && listing.city ? ', ' : '' %><%= listing.city %></p>
                <% } %>
                <p class="text-muted small flex-grow-1"><%= listing.description.slice(0, 160) %><%= listing.description.length > 160 ? '…' : '' %></p>
                <div class="d-flex justify-content-between align-items-center mt-3">
                  <a class="btn btn-outline-secondary btn-sm" href="/sludinajums/<%= listing.id %>">Skatit</a>
                  <a class="btn btn-toggler-accent btn-sm" href="/sludinajums/<%= listing.id %>/rediget">Rediget</a>
                </div>
                <span class="text-muted small mt-3">Atjaunots: <%= dayjs(listing.updated_at).format('DD.MM.YYYY HH:mm') %></span>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </section>
</main>

<%- include('partials/layout-foot') %>
