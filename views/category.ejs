<%- include('partials/header', { title: current.title }) %>

<section>
  <div style="display:flex;justify-content:space-between;align-items:center">
    <h2 style="margin:0"><%= current.title %></h2>
    <a class="btn" href="/sekcija/<%= current.key %>/pievienot">Pievienot sludinājumu</a>
  </div>

  <% if (!listings || listings.length === 0) { %>
    <p class="muted" style="margin-top:1rem">Šobrīd šajā sekcijā nav sludinājumu.</p>
  <% } else { %>
    <div class="grid" style="margin-top:1rem">
      <% listings.forEach(l => { const img = (l.images && l.images[0]) || '/image/dummy-img-600x400.jpg'; %>
        <div class="card">
          <a href="/sludinajums/<%= l.id %>"><img src="<%= img %>" alt="<%= l.title %>"></a>
          <div class="card-body">
            <h3 style="margin:.2rem 0"><a href="/sludinajums/<%= l.id %>"><%= l.title %></a></h3>
            <p class="muted"><%= l.city || '' %> <%= l.address ? ' · ' + l.address : '' %></p>
            <p style="font-weight:700"><%= l.price || '' %></p>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>

<%- include('partials/footer') %>
