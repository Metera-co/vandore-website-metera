<%- include('partials/header', { title: listing.title }) %>

<article>
  <a href="/sekcija/<%= listing.category %>" class="btn" style="background:#6b7280">← Atpakaļ uz sarakstu</a>
  <h2 style="margin-top:1rem"><%= listing.title %></h2>
  <p class="muted">Publicēts: <%= dayjs(listing.created_at).format('YYYY.MM.DD HH:mm') %></p>

  <% if (listing.images && listing.images.length) { %>
    <div class="grid" style="grid-template-columns:repeat(auto-fill,minmax(200px,1fr));margin:1rem 0">
      <% listing.images.forEach(src => { %>
        <a href="<%= src %>" target="_blank" class="card"><img src="<%= src %>" alt="Attēls"></a>
      <% }) %>
    </div>
  <% } %>

  <div class="card">
    <div class="card-body">
      <p style="font-weight:700;font-size:1.2rem"><%= listing.price || '' %></p>
      <p><strong>Pilsēta:</strong> <%= listing.city || '-' %></p>
      <p><strong>Adrese:</strong> <%= listing.address || '-' %></p>
      <p><strong>Apraksts:</strong><br><%= (listing.description || '').replace(/\n/g,'<br>') %></p>
    </div>
  </div>

  <div class="card" style="margin-top:1rem">
    <div class="card-body">
      <h3>Kontakti</h3>
      <p><strong>Vārds:</strong> <%= listing.contact_name || '-' %></p>
      <p><strong>Tālrunis:</strong> <%= listing.contact_phone || '-' %></p>
      <p><strong>E-pasts:</strong> <%= listing.contact_email || '-' %></p>
    </div>
  </div>
</article>

<%- include('partials/footer') %>

